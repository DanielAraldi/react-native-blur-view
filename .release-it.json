{
  "git": {
    "commitMessage": "feat: release v${version}",
    "tagName": "v${version}",
    "push": true,
    "commit": true,
    "tag": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["yarn lint", "yarn typecheck"],
    "after:bump": ["yarn prepare"]
  }
}
